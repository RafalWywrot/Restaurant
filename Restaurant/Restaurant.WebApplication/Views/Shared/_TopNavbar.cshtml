@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Stoliki", "Index", "BookTable")</li>
            <li>@Html.ActionLink("Rezerwacje", "Index", "Reservations")</li>
            <li>@Html.ActionLink("Menu", "Index", "Menu")</li>
            <li>@Html.ActionLink("Zamówienia", "Index", "Order")</li>
            <li>
                @Html.ActionLink("Witaj " + User.Identity.GetUserName() + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj</a></li>
        </ul>
    }
}
else
{
    @Html.Partial("_LoginPartial")
}
