@model Restaurant.WebApplication.Models.OrderElementViewModel

<tr>
    @using (Html.BeginForm("Add", "Order", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        <td class="col-md-5">
            @Html.DisplayFor(modelItem => modelItem.Name)
        </td>
        <td class="col-md-3">
            @Html.TextBoxFor(modelItem => modelItem.Amount, new { @class = "form-control" })
        </td>
        <td class="col-md-3">
            @Html.DisplayFor(modelItem => modelItem.Price, new { @class = "form-control" })
        </td>
        <td class="col-md-4">
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </td>
    }
</tr>

