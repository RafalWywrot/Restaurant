@model IEnumerable<Restaurant.WebApplication.Models.OrderElementViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-4">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
            </tr>

            @foreach (var item in Model)
            {
                @Html.Partial("_OrderElement", item)
            }
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script>
        $(".add-order").click(function () {
            var row = $(this).closest("tr");
            var orderModel = {}; Id
            orderModel.Id = row.find('#Id').val();
            orderModel.Amount = row.find('#Amount').val();
            $.ajax({
                url: '@Url.Action("Add", "Order")',
                type: "POST",
                contentType: 'application/json',
                datatype: 'json',
                data: JSON.stringify({
                    order: orderModel
                }),
                success: function (response) { // remove buttons and replace by message response by server
                    if (response) {
                        toastr.success('Success @Html.ActionLink("Idz do zamówien", "Index", "Order", null, new { @class = "btn btn-primary" })');
                    }
                    else {
                        alert('no response');
                    }
                },
                error: function (xhr) { alert('big error') }
            });
    });
    </script>
}