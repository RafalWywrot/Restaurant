@model IEnumerable<Restaurant.WebApplication.Models.OrderElementViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-4">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
            </tr>

            @foreach (var item in Model)
            {
                @Html.Partial("_OrderElement", item)
            }
        </table>
    </div>
</div>
